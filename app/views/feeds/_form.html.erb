<%= form_for(@feed, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @feed.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h4>

      <ul>
      <% @feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>News Sources</h3>
  <ul class="list-group">
  <%= f.collection_check_boxes(:feed_id, @all_feeds, :id, :feed_name) do |b| %>
    <li class="list-group-item">
      <%= b.label("data-value": b.value) { b.check_box + ' ' + b.text } %>
    </li>
  <% end %>
  </ul>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

